{
  "name": "site-builder",
  "version": "0.2.5",
  "description": "A yaml-based website generator and CMS",
  "type": "module",
  "keywords": [
    "yaml",
    "cms",
    "website-builder"
  ],
  "homepage": "https://github.com/irj-io/site-builder",
  "bugs": {
    "url": "https://github.com/irj-io/site-builder/issues"
  },
  "author": "IRJ.io <dev@irj.io> (https://irj.io)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/irj-io/site-builder.git"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "//build": "next build",
    "build": "npm run build:ts & npm run build:css",
    "build:ts": "tsc",
    "build:css": "postcss src/index.css -o ./dist/index.css",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test",
    "coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "//dev": "next dev",
    "///dev": "(pnpm schema & pnpm dev:clean) && (pnpm dev:js & pnpm dev:js:types & pnpm dev:css)",
    "//dev:js": "node scripts/esbuild.js watch=true",
    "//dev:js:types": "tsc -p ./tsconfig.dist.json --watch --incremental >/dev/null",
    "dev": "npm run dev:clean && npm run schema && concurrently \"npm run dev:ts\" \"npm run dev:css\"",
    "dev:clean": "rm -rf dist/",
    "dev:ts": "tsc --watch",
    "dev:css": "postcss src/index.css -o ./dist/index.css --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "copy-css": "copyfiles -u 1 \"src/index.css\" dist",
    "schema": "tsx tools/build-schema.ts",
    "start": "next start",
    "//dist": "npm run schema & node scripts/esbuild.js & npm run dist:css",
    "//dist:css": "postcss ./src/index.css -o ./dist/index.css --env production",
    "prepare": "npm run build",
    "prepublishOnly": "npm run ci",
    "test": "vitest"
  },
  "exports": {
    "./blocks": {
      "types": "./dist/blocks/index.d.ts",
      "import": "./dist/blocks/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "import": "./dist/database/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./index.css": "./dist/index.css",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": "./dist/*"
  },
  "dependencies": {
    "@changesets/cli": "^2.28.1",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@tailwindcss/typography": "^0.5.16",
    "change-case": "^5.4.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.477.0",
    "motion": "^12.4.10",
    "next-themes": "^0.4.4",
    "react-hook-form": "^7.54.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-react": "^8.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "remark-flexible-toc": "^1.1.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "remeda": "^2.21.0",
    "tailwind-merge": "^3.0.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/postcss": "^4.0.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/unist": "^3.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.8",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.2.1",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "next": "^15.2.1",
    "next-themes": "^0.4.4",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vitest": "^3.0.8"
  },
  "peerDependencies": {
    "next": "^15.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
