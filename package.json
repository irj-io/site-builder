{
  "name": "site-builder",
  "version": "0.1.3",
  "scripts": {
    "build": "next build",
    "coverage": "vitest run --coverage",
    "dev": "next dev",
    "lint": "next lint",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "ci": "pnpm check-format && pnpm dist && pnpm check-exports",
    "copy-css": "copyfiles -u 1 \"src/index.css\" dist",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "schema": "tsx tools/build-schema.ts",
    "start": "next start",
    "test": "vitest",
    "dist": "tsc-alias -p ./tsconfig.dist.json && tsc -p ./tsconfig.dist.json && pnpm dist:css && pnpm schema",
    "dist:css": "postcss ./src/index.css -o ./dist/index.css --env production",
    "prepare": "pnpm dist"
  },
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@tailwindcss/postcss": "^4.0.6",
    "@tailwindcss/typography": "^0.5.16",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20.17.17",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/unist": "^3.0.3",
    "change-case": "^5.4.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.473.0",
    "motion": "^12.4.7",
    "next": "15.1.4",
    "next-themes": "^0.4.4",
    "postcss": "^8.5.2",
    "postcss-cli": "^11.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-react": "^8.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "remark-flexible-toc": "^1.1.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "remeda": "^2.20.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.7.3",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@eslint/eslintrc": "^3.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "3.0.5",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.20.1",
    "eslint-config-next": "15.1.4",
    "file-loader": "^6.2.0",
    "jsdom": "^26.0.0",
    "raw-loader": "^4.0.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5",
    "yaml-loader": "^0.8.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
